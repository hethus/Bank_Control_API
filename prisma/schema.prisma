generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../entity_diagram.pdf"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Frequency {
  time             String
  isAlive          Boolean  @default(true)         @map("is_alive")
}

type constancy {
  from            String // mes especifico, valor especifico ou valor padrao (ate a data final da mark)
  date            DateTime?
  value           Float?
  isAlive          Boolean  @default(true)         @map("is_alive")
  createdAt       DateTime @default(now())         @map("created_at")
  updatedAt       DateTime @default(now())         @map("updated_at")
}

type BankType {
  name             String
  value            Float?
  credit           CreditType?
  currencys        CurrencyType[]
  debts            DebtType[]
  isAlive          Boolean  @default(true)         @map("is_alive")
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")
}

type CurrencyType {
  name             String
  value            Float
  isFrequent       Boolean  @default(false)        @map("is_frequent")
  frequency        Frequency?
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")
}

type CreditType {
  name             String
  value            Float
  dueDate          DateTime                        @map("due_date")
  isAlive          Boolean  @default(true)         @map("is_alive")
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")
}

type MarkType {
  name             String
  price            Float
  isAlive          Boolean  @default(true)         @map("is_alive") //se estiver false, e for para true, devera ser feito update
  commits          CommitType[]
  conclusionDate   DateTime                        @map("conclusion_date")
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")
}

type CommitType {
  name             String
  isPorcentage     Boolean  @default(false)        @map("is_porcentage")
  value            Float // se isPorcentage for true, price é em porcentagem
  isConstant       Boolean  @default(false)        @map("is_constant")
  constancy        constancy?
  isAlive          Boolean  @default(true)         @map("is_alive")
  origin           String // pode ser o nome de um Currency ou de um Bank / Credit
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")
}

type DebtType {
  name             String
  price            Float
  isCredit         Boolean  @default(false)        @map("is_credit")
  isFrequent       Boolean  @default(false)        @map("is_frequent")
  frequency        Frequency?
  origin           String // pode ser o nome de um Currency ou de um Bank / Credit
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")
}

model User {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  name             String
  email            String
  value            Float    @default(0)
  password         String
  banks            Bank[]
  marks            Mark[]
  historics        Historic[]
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")

  @@map("users")
  @@unique([email])
}

model Bank {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  user             User     @relation(fields: [userEmail], references: [email])
  userEmail        String
  name             String
  value            Float?
  credit           Credit?
  currencys        Currency[]
  debts            Debt[]
  isAlive          Boolean  @default(true)         @map("is_alive")
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")

  @@map("banks")
  @@unique([name])
}

model Currency {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  bank             Bank     @relation(fields: [bankName], references: [name])
  bankName         String                          @map("bank_name")
  name             String
  value            Float
  isFrequent       Boolean  @default(false)        @map("is_frequent")
  frequency        Frequency?
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")

  @@map("currencys")
} // colocar verificação name currency in bank atual

model Credit {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  bank             Bank     @relation(fields: [bankName], references: [name])
  bankName         String   @unique                @map("bank_name")
  name             String
  value            Float
  dueDate          DateTime                        @map("due_date")
  isAlive          Boolean  @default(true)         @map("is_alive")
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")

  @@map("credits")
} // colocar verificação name credit in bank atual

model Mark {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  user             User     @relation(fields: [userEmail], references: [email])
  userEmail        String
  name             String
  price            Float
  isAlive          Boolean  @default(true)         @map("is_alive") //se estiver false, e for para true, devera ser feito update
  commits          Commit[]
  conclusionDate   DateTime                        @map("conclusion_date")
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")

  @@map("marks")
  @@unique([name])
}

model Commit {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  mark             Mark     @relation(fields: [markName], references: [name])
  markName         String                          @map("mark_name")
  name             String
  isPorcentage     Boolean  @default(false)        @map("is_porcentage")
  value            Float // se isPorcentage for true, price é em porcentagem
  isConstant       Boolean  @default(false)        @map("is_constant")
  constancy        constancy?
  isAlive          Boolean  @default(true)         @map("is_alive")
  origin           String // pode ser o nome de um Currency ou de um Bank / Credit
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")

  @@map("commits")
} // colocar verificação name commit in mark atual

model Debt {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  bank             Bank     @relation(fields: [bankName], references: [name])
  bankName         String                          @map("bank_name")
  name             String   @unique
  price            Float
  isCredit         Boolean  @default(false)        @map("is_credit")
  isFrequent       Boolean  @default(false)        @map("is_frequent")
  frequency        Frequency?
  origin           String // pode ser o nome de um Currency ou de um Bank / Credit
  createdAt        DateTime @default(now())        @map("created_at")
  updatedAt        DateTime @default(now())        @map("updated_at")

  @@map("debts")
} // colocar verificação name debt in bank atual

model Historic {
  id               String   @id @default(auto())   @map("_id") @db.ObjectId
  user             User     @relation(fields: [userEmail], references: [email])
  userEmail        String
  operation        String  // se é debt, credit, mark, bank, currency, commit
  where            String? // se for debt, credit ou currency, ai é o name do bank, se for commit, ai é o name da mark, mark e bank não precisa desse campo
  debt             DebtType?
  credit           CreditType?
  mark             MarkType?
  bank             BankType?
  currency         CurrencyType?
  commit           CommitType?
  createdAt        DateTime @default(now())        @map("created_at")

  @@map("historics")
}
